{
  "workbench.productIconTheme": "fluent-icons",
  "workbench.colorTheme": "Eva Dark",
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "python.analysis.autoImportCompletions": true,
  "remote.autoForwardPortsSource": "hybrid",
  "workbench.iconTheme": "vscode-icons",
  "codeium.enableConfig": {
    "*": true
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "workbench.editorAssociations": {
    "*.lock": "default"
  },
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.useLibraryCodeForTypes": true,
  "testing.alwaysRevealTestOnStateChange": true,
  "Notes.notesLocation": "/home/nestor/development/notas",
  "window.menuBarVisibility": "toggle",
  "workbench.sideBar.location": "right",
  "[sql]": {
    "editor.defaultFormatter": "adpyke.vscode-sql-formatter"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "editor.fontSize": 15,
  "window.titleBarStyle": "custom",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "smooth",
  "editor.scrollbar.vertical": "auto",
  "editor.overviewRulerBorder": false,
  "editor.hideCursorInOverviewRuler": true,
  "breadcrumbs.enabled": false,
  "editor.glyphMargin": true,
  "workbench.statusBar.visible": true,
  "terminal.integrated.gpuAcceleration": "on",
  "editor.inlayHints.enabled": "onUnlessPressed",
  "notebook.formatOnSave.enabled": true,
  
  // python config -----------------------------------------
  "ruff.lint.args": ["--config", "ruff.toml"],
  "ruff.format.args":  ["--config", "ruff.toml"],
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.rulers": [
      79,
      100
    ]
  },
  // --------------------------------------------------------

  "yaml.schemas": {
    "file:///home/nestor/.vscode/extensions/atlassian.atlascode-3.0.10/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
  },
  "terminal.integrated.defaultLocation": "editor"
}