{
  // see https://code.visualstudio.com/docs/python/settings-reference
  // theme
  "workbench.productIconTheme": "fluent-icons",
  "workbench.colorTheme": "One Dark Pro Darker",
  "editor.fontFamily": "'JetBrainsMono NF', 'JetBrains Mono'",
  // change font
  "editor.fontLigatures": true,
  // Font size
  "editor.fontSize": 16,
  "debug.console.fontSize": 16,
  "debug.console.lineHeight": 28,
  "terminal.integrated.fontSize": 15,
  // ui
  "workbench.editor.limit.value": 5,
  "window.dialogStyle": "custom",
  "window.titleBarStyle": "custom",
  "workbench.editor.enablePreview": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "smooth",
  "editor.scrollbar.vertical": "auto",
  "editor.overviewRulerBorder": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.glyphMargin": true,
  "editor.minimap.enabled": false,
  "editor.dragAndDrop": false,
  "explorer.enableDragAndDrop": false,
  "notebook.lineNumbers": "on",
  "terminal.external.linuxExec": "warp-terminal",
  "diffEditor.renderGutterMenu": true,
  "workbench.sideBar.location": "right",
  "window.title": "${rootName}${separator}${activeRepositoryBranchName}",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.gpuAcceleration": "on",
  "diffEditor.codeLens": true,
  "merge-conflict.autoNavigateNextConflict.enabled": true,
  "git.mergeEditor": true,
  "diffEditor.renderSideBySide": true,
  "python.analysis.indexing": true,
  // gitlab
  "gitlab-mr.targetRemote": "origin",
  "gitlab-mr.autoOpenMr": true,
  "gitlab-mr.useDefaultBranch": false,
  //

  "remote.autoForwardPortsSource": "hybrid",
  "workbench.iconTheme": "vscode-icons",
  "codeium.enableConfig": {
    "*": true
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "workbench.editorAssociations": {
    "*.lock": "default"
  },
  "python.analysis.supportRestructuredText": true,
  "python.analysis.typeCheckingMode": "standard",
  "python.analysis.useLibraryCodeForTypes": true,
  "testing.alwaysRevealTestOnStateChange": true,
  "Notes.notesLocation": "/home/nestor/development/notas",
  "[sql]": {
    "editor.defaultFormatter": "adpyke.vscode-sql-formatter"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },

  "editor.inlayHints.enabled": "onUnlessPressed",
  "notebook.formatOnSave.enabled": true,
  "vsintellicode.python.completionsEnabled": true,
  // python config
  "python.envFile": "${workspaceFolder}/.venv",
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.analysis.stubPath": "typings",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.completeFunctionParens": false,
  "python.analysis.diagnosticMode": "openFilesOnly",
  "python.analysis.autoFormatStrings": true,
  "python.analysis.gotoDefinitionInStringLiteral": true,
  "python.analysis.extraPaths": [
    "~/Repos/quick/apps/ondemand-api/.venv/lib/python3.11/site-packages"
  ],
  "python.languageServer": "Pylance",
  "ruff.lint.enable": true,
  "ruff.lint.args": [
    "--config",
    "~/Repos/quick/apps/ondemand-api/ruff.toml"
  ],
  "ruff.format.args": [
    "--config",
    "~/Repos/quick/apps/ondemand-api/ruff.toml"
  ],
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.rulers": [
      // 79,
      100
    ]
  },
  // "python.analysis.inlayHints.variableTypes": true,
  // "python.analysis.inlayHints.callArgumentNames": "all",
  // "python.analysis.inlayHints.functionReturnTypes": true,
  "terminal.integrated.defaultLocation": "editor",
  "python.analysis.packageIndexDepths": [
    {
      "name": "django",
      "depth": 5
    },
  ],
  // ----------------------------------------------------------------------------------------------------------------


  "explorer.autoReveal": true,
  "markdown.preview.scrollEditorWithPreview": true,
  "markdown.preview.scrollPreviewWithEditor": true,
  "workbench.editor.tabSizing": "shrink",
  "workbench.panel.defaultLocation": "right",
  "workbench.editor.autoLockGroups": {
    "jupyter-notebook": true
  },

  "gitlens.views.branches.files.layout": "tree",
  // git prefix
  "gitPrefix.isSuffix": false,
  "gitPrefix.pattern": "(\\w+)/(\\w+-\\d+)_(.*)",
  "gitPrefix.replacement": "$1($2): $3",
  "workbench.activityBar.location": "default",
  // "window.customTitleBarVisibility": "auto",
  "diffEditor.hideUnchangedRegions.enabled": true,
  "diffEditor.experimental.showMoves": true,
  "scm.experimental.showHistoryGraph": true,
  "window.menuBarVisibility": "compact",
  "notebook.experimental.cellChat": true,
  "notebook.formatOnCellExecution": true,
  "notebook.outline.showCodeCells": true,
  "terminal.integrated.fontFamily": "'JetBrainsMono NF'",
  "python.defaultInterpreterPath": "/home/nestor/Repos/quick/apps/ondemand-api/.venv"
}